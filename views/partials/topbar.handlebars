{{#if curuser}}
  {{> trip/new this}}
{{else}}
  {{> new_user this}}
  {{> login this}}
{{/if}}
<div class="navbar navbar-default navbar-fixed-top" role="navigation">
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
      </button>
    </div>
    <a class="navbar-brand" href="/"><img class="logo" src="/images/logo_whitetext.png"></a>
    <div class="collapse navbar-collapse navbar-ex1-collapse">
        {{#if curuser}}
        <ul class="nav navbar-nav">
          <li><a href="/user/{{curuser._id}}">MY TRIPS</a></li>
        </ul>
        {{else}}
        {{!-- <li><a href="/user/1">My Trips</a></li> --}}
        {{/if}}
      
      <form class="navbar-form navbar-left" method="get" action="/search" role="search">
        <div class="form-group">
          <input type="text" class="form-control" name="query" placeholder="">
          <button type="submit" class="btn btn-default">Search</button>
        </div>
      </form>
      <ul class="nav navbar-nav navbar-right">
        {{#if curuser}}
          <li><a class="trigger" href="#" data-toggle="modal" data-target="#new_trip_modal">CREATE NEW TRIP</a></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">{{curuser.username}}<b class="caret"></b></a>
            <ul class="dropdown-menu">
              <li><a href="/user/edit">Edit Account</a></li>
              <li class="divider"></li>
              {{!-- <li><a href="#">SETTINGS</a></li> --}}
              {{#if curuser.admin}}<li><a href="/admin">ADMIN</a></li>{{/if}}
              <li><a id="signout_link" href="#">Signout</a></li>
            </ul>
          </li>
        {{else}}
          <li><a class="trigger" href="#" data-toggle="modal" data-target="#new_user_modal">CREATE ACCOUNT</a></li>
          <li><a class="trigger" href="#" data-toggle="modal" data-target="#login_modal">LOGIN</a></li>
        {{/if}}
      </ul>
    </div>
  </div>
</div>